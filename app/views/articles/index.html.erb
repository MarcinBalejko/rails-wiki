<p id="notice"><%= notice %></p>

<% if request.original_url.split("=").last.include? '/' %>
<h1>All Articles</h1>
<% else %>
<h1>All <%= request.original_url.split("=").last %> Articles</h1>
<% end %>

<br>

<% @articles.each do |article| %>
  <div class="card" >
    <div class="card-body">
      <h2 id="title-underline"><%= link_to article.title, article, style: 'text-decoration: none;' %></h2>
      <p class="card-text">
        <%= truncate(article.body, length: 200) %>
      </p>
    </div>
  </div>
<% end %>